<link rel="stylesheet" href="./css/login/entrar.css">
    <article class="fundo__login">
        <figure class="logo-login">
            <img src="./img/quasart-logo-branca.png" alt="logo do Quasart">
        </figure>
    </article>
    <article class="container__form">
        <header class="form__title">
            <h2 class="title">REDEFINIR SENHA</h2>
            <h3 class="subtitle">Vamos te ajudar a recuperar sua senha!</h3>
        </header>
        <p class="text helpText mt-1"></p>
        <form action="/redefinirSenha" method="get">
            <article class="input__container senha">
                <input type="password" name="novaSenha" id="novaSenha" class="input__control" placeholder="Nova senha" required>
            <button class="ocultSenha btn"><i class="bi bi-eye"></i></button>
            <label for="novaSenha">Nova senha:</label>
            </article>
            <article class="input__container senha">
                <input type="password" name="confirmarSenha" id="confirmarSenha" class="input__control" placeholder="Confirmar nova senha" required>
            <button class="ocultSenha btn"><i class="bi bi-eye"></i></button>
            <label for="confirmarSenha">Confirmar nova senha:</label>
            </article>
            <article class="links">
                <a href="/entrar" class="link">Cancelar</a>
            </article>
            <button class="btn submit text p-2 mt-3">Enviar</button>
        </form>
    </article>

  